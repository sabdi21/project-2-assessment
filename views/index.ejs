<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="/css/style.css" type="text/css" rel="stylesheet">
    <title>Widget Assessment</title>
</head>
<body>
    <h1>Wacky Widgets!</h1>
    <% if (allWidgets.length === 0) { %>
        <h3>No Widgets Exist <h3>
    <% } else { %>
    <div>
    <% allWidgets.forEach(w => { %>
    <section>
            <h2><%= w.description %></h2>
            <p>Quantity: <%= w.quantity %></p>
            <form method="POST" action= "/<%= w.id %>/?_method=DELETE">
            <input type="Submit" value="DELETE"></form>
    </section>
            <% }) %>
    </div>
    <% } %>
    <hr>
     <!-- form section here -->
    <h4>Add Widget</h4>
    <form method="POST" action="/">
    <input type="text" name="description" placeholder="Widget description here...">
    <input type="text" name="quantity" placeholder="Widget description here...">
    <button type="submit" value="add-widget">ADD WIDGET</button>
    </form>
</body>
</html>